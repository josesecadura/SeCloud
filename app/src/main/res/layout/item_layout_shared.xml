<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logo_archivo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageArchivo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Imagen del archivo"
            android:scaleType="centerInside"
            android:src="@drawable/rounded_background"
            android:background="@drawable/rounded_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreArchivo"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:text="Nombre del archivo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/nombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de usuario" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="22dp"
            android:layout_height="43dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:contentDescription="Botón de opciones"
            android:src="@drawable/puntos" />

    </LinearLayout>

    <!-- Agregamos la línea de separación horizontal -->
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:background="#ACACAC" />

</LinearLayout>